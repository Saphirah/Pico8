pico-8 cartridge // http://www.pico-8.com
version 32
__lua__

greenParticles = {}
offset = 0
distance = 48
width = 64
timer = 0
startTime = time()

function _init()
    for x = 0, 500 do
        add(greenParticles, { pos = rnd(8), speed = 0.2 + rnd(1.5), distanceOffset = rnd(6), color = rColor()})
    end
    music(0)
end

function _update60()
    if(btn(4,1)) then 
        load("MainMenu")
        run()
    end
end

function _draw()
    cls()
    timer = time() - startTime
    color(6)
    if(timer > 0 and timer < 4) then
        print('thank you', 46, 58)
        print('for playing', 42, 68)
    elseif(timer >= 4 and timer < 8) then
        print('artist', 53, 58)
        print('calvin', 53, 68)
        distance = lerp(distance, 42, 0.05)
    elseif(timer >= 8 and timer < 12) then
        print('programmer', 45, 58)
        print('philipp', 51, 68)
        distance = lerp(distance, 46, 0.05)
    elseif(timer >= 12 and timer < 16) then
        print('sound and sfx', 38, 58)
        print('calvin', 53, 68)
        distance = lerp(distance, 55, 0.05)
    elseif(timer >= 16 and timer < 20) then
        print('teacher', 52, 58)
        print('prof. leissler', 38, 68)
        distance = lerp(distance, 46, 0.05)
        width = lerp(width, 54, 0.05)
    elseif(timer >= 20) then
        load("MainMenu")
        run()
    end
    offset = (offset + 0.001) % 100
    drawPixel(11)
end

function drawPixel(color)
    foreach(greenParticles, 
        function(obj)
            pset(
                64 + cos(obj.pos + offset * obj.speed) * (distance + sin(offset * obj.distanceOffset) * (width-distance)), 
                64 + sin(obj.pos + offset * obj.speed) * (distance + sin(offset * obj.distanceOffset) * (width-distance)), 
                obj.color
            )
        end
    )
end

function rColor()
    local c = {3, 8, 11, 11, 11, 11, 2}
    return c[flr(1+rnd(#c))]
end

function lerp(a, b, f)
    return a + f * (b-a)
end

